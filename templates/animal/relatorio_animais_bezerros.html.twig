{% extends 'animal/index.html.twig' %}

{% block card %}
     <div class="card-body">  
        <div class="tab-content">
            <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
                <div class="card-header">
                    <h5>Quantidade total de animais de até 1 ano de idade e que consomem mais de 500Kg de ração por semana</h5>
        
                   {% if bezerros == 1 %}
                        <p id="total-leite"><strong>{{bezerros}} Animal</strong></p>
                    {% else %}
                        <p id="total-leite"><strong>{{bezerros}} Animais</strong></p>
                    {% endif %}


                </div>
            
               
        </div>
    </div>

{% endblock %}
